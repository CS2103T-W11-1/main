@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor LOGIC_COLOR_T4
skinparam classBackgroundColor LOGIC_COLOR

package Logic {

package Parser {
package exceptions {
Class ParseException
}
Interface Parser <<Interface>>
Class AlgoBaseParser
Class XYZCommandParser
Class CliSyntax
Class ParserUtil
Class ArgumentMultimap
Class ArgumentTokenizer
Class Prefix
}

package Command {
package exceptions {
Class CommandException
}
Class XYZCommand
Class ClearCommand
Class ListCommand
Class ListPlanCommand
Class ListTagCommand
Class ExitCommand
Class CommandResult
Class "{abstract}\nCommand" as Command
}

Interface Logic <<Interface>>
Class LogicManager
}

package Model{
Class HiddenModel #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Logic

LogicManager .up.|> Logic
LogicManager -->"1" AlgoBaseParser
AlgoBaseParser .left.> XYZCommandParser: creates >
XYZCommandParser ..> XYZCommand : creates >
XYZCommandParser ..|> Parser
XYZCommandParser ..> ArgumentMultimap
XYZCommandParser ..> ArgumentTokenizer
ArgumentTokenizer .left.> ArgumentMultimap
XYZCommandParser ..> CliSyntax
CliSyntax ..> Prefix
XYZCommandParser ..> ParserUtil
ParserUtil .down.> Prefix
ArgumentTokenizer .down.> Prefix
XYZCommand -up-|> Command
AlgoBaseParser .up.> ClearCommand: creates >
AlgoBaseParser .up.> ListCommand: creates >
AlgoBaseParser .up.> ListPlanCommand: creates >
AlgoBaseParser .up.> ListTagCommand: creates >
AlgoBaseParser .up.> ExitCommand: creates >
ClearCommand -up-|> Command
ListCommand -up-|> Command
ListPlanCommand -up-|> Command
ListTagCommand -up-|> Command
ExitCommand -up-|> Command
LogicManager .left.> Command : executes >

LogicManager --> Model
Command .right.> Model
note right of XYZCommand: XYZCommand = AddCommand, \nFindCommand, etc

Logic ..> CommandResult
LogicManager .down.> CommandResult
Command .up.> CommandResult
CommandResult -[hidden]-> Parser
@enduml
